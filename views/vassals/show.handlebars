<h2><a href="/kingdoms">All Kingdoms</a></h2>
<h2><a href="/kingdoms/{{kingdom}}">{{kingdom}}'s Castles</a></h2>
<h2><a href="/kingdoms/{{kingdom}}/{{castle}}">{{castle}}'s Lieges</a></h2>

<div class="box">
  <div class="box--title">{{liege}}</div>
  <div class="box--content">
    {{#each vassals as |vassal|}}
    <div class="vassal">
      {{vassal}}
    </div>
    {{/each}}
  </div>
</div>

<div class="box">
  <div class="box--title">Add Vassal</div>
  <div class="box--content">
    <form action="/kingdoms/{{kingdom}}/{{castle}}/{{liege}}" method="POST">
      <input type="text" name="name" id="name" placeholder="Name">
      <input type="submit" value="Add New Vassal" method="post">
    </form>
  </div>
</div>
